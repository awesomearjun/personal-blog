{
    "compilerOptions": {
        "target": "es2022",

        "module": "nodenext",
        "moduleResolution": "nodenext",

        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipDefaultLibCheck": true,
    },

    "include": [
        "backend/**/*.ts",
        "shared/**/*.ts"
    ],

    "exclude": [
        "src",
        "node_modules"
    ]
}
